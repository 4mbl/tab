---
import type { Link } from '../pages/Link';
import LinkCard from './LinkCard.astro';

export interface Props {
  title?: string;
  links: Link[];
}

const { title, links } = Astro.props;

function uuid() {
  return 'xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx'.replace(/x/g, () =>
    String.fromCharCode(97 + Math.floor(Math.random() * 26))
  );
}

const groupId = uuid();
---

<div id={groupId} class="group-card">
  <div class="group-header">
    <h2 class="closed" tabindex="1">{title}</h2>
    <button class="btn-open-all" tabindex="1">Open All</button>
  </div>
  <ul class="link-list hidden">
    {
      links.map((item: Link) => (
        <li class="group-item">
          <LinkCard
            href={item.url}
            title={item.title}
            body={item.body}
            icon={item.icon}
          />
        </li>
      ))
    }
  </ul>
</div>

<style>
  .group-item {
    width: 100%;
  }

  .group-card {
    width: 100%;
    padding: 0.25rem 0;
    list-style: none;
    background-color: #383838;
    background-image: none;
    background-size: 400%;
    border-radius: 0.35rem;
  }

  @media (max-width: 767px) {
    .group-card {
      width: 100%;
    }
  }

  .group-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .group-header h2 {
    padding-left: 0.5rem;
    font-size: 1.5rem;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    cursor: pointer;
  }

  .link-list {
    display: flex;
    flex-wrap: wrap;
    width: 97.5%;
    margin: 0 auto;
    gap: 0.5rem;
  }

  .btn-open-all {
    display: flex;
    align-items: center;
    margin: 0.5rem;
    height: 1.5rem;
    font-size: 1rem;
    padding: 0.8rem;
    border-radius: 0.25rem;
    border: 1px solid #fff;
    background-color: #222;
    color: #fff;
    cursor: pointer;
  }

  .btn-open-all:hover,
  .btn-open-all:focus {
    background-color: #fff;
    color: #222;
  }

  .open::before {
    content: '⯆';
    margin-right: 0.5rem;
  }

  .closed::before {
    content: '⯈';
    margin-right: 0.5rem;
  }

  .hidden {
    display: none;
  }
</style>

<script>
  const groupCards = document.querySelectorAll('.group-card');

  groupCards.forEach((card) => {
    const groupId = card.getAttribute('id');

    const button = card.querySelector('.btn-open-all');
    if (button) {
      button.addEventListener('click', () => {
        let firstUrl = '';
        const links = document.querySelectorAll(`#${groupId} a`);
        links.forEach((link) => {
          const url = link.getAttribute('href');
          if (!url) return;
          if (!firstUrl) firstUrl = url;
          else window.open(url, '_blank');
        });
        window.open(firstUrl, '_self');
      });
    }

    const heading = card.querySelector('h2');
    if (heading) {
      if (groupId) {
        heading.addEventListener('click', () => {
          toggleLinkList(groupId);
        });
        heading.addEventListener('keydown', (e: any) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            toggleLinkList(groupId);
          }
        });
      }
    }
  });

  function toggleLinkList(groupId: string) {
    const heading = document.querySelector(`#${groupId} h2`);
    const linkList = document.querySelector(`#${groupId} .link-list`);
    if (!linkList || !heading) return;
    linkList.classList.toggle('hidden');
    heading.classList.toggle('open');
    heading.classList.toggle('closed');
  }
</script>
